<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:weightSum="1">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="400dp"
	android:background="@drawable/wolf"
    android:layout_gravity="center"
    android:weightSum="1">
    <EditText android:id="@+id/NumberDisplay" android:layout_height="wrap_content" android:gravity="right" android:layout_width="match_parent" android:layout_marginTop="20dp"></EditText>
    <TableRow android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tableRow5">
        <Button android:text="A" android:id="@+id/buttonA" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:text="B" android:id="@+id/buttonB" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:text="C" android:id="@+id/buttonC" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:text="D" android:id="@+id/buttonD" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:text="E" android:id="@+id/buttonE" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        <Button android:text="F" android:id="@+id/buttonF" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        
    </TableRow>
    <TableLayout android:id="@+id/tableLayout1" android:layout_height="wrap_content" android:layout_width="fill_parent"  android:paddingLeft="50dp" android:paddingRight="50dp" android:layout_marginBottom="20dp">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:text="7" android:id="@+id/button7" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <Button android:text="8" android:id="@+id/button8" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <Button android:text="9" android:id="@+id/button9" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <Button android:text="X" android:id="@+id/buttonMultiply" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:text="4" android:id="@+id/button4" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <Button android:text="5" android:id="@+id/button5" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <Button android:text="6" android:id="@+id/button6" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <Button android:text="/" android:id="@+id/buttonDivide" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        </TableRow>
        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:text="3" android:id="@+id/button3"  android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <Button android:text="2" android:id="@+id/button2" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <Button android:text="1" android:id="@+id/button1" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <Button android:text="-" android:id="@+id/buttonSubtract" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        </TableRow>
        <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:text="0" android:id="@+id/button0" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <Button android:text="C" android:id="@+id/buttonClear" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <Button android:text="=" android:id="@+id/buttonEquals" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <Button android:text="+" android:id="@+id/buttonAddition" android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        </TableRow>
    </TableLayout>
    <RadioGroup android:id="@+id/radioGroup1" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RadioButton android:text="binary" android:id="@+id/binary" android:layout_width="wrap_content" android:layout_height="wrap_content"></RadioButton>
        <RadioButton android:text="decimal" android:id="@+id/decimal" android:layout_width="wrap_content" android:layout_height="wrap_content"></RadioButton>
        <RadioButton android:text="hexidecimal" android:id="@+id/hexedecimal" android:checked="true" android:layout_width="wrap_content" android:layout_height="wrap_content"></RadioButton>
    </RadioGroup>
    </LinearLayout>
    
    
</LinearLayout>
